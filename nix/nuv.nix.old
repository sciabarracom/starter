{ lib
,  stdenv
, fetchFromGitHub
, buildGoModule
}:

let
  version = "3.0.1-beta.2405062139";
in 
buildGoModule {
  pname = "nuv";
  inherit version;
  src = fetchFromGitHub {
    owner = "nuvolaris";
    repo = "nuv";
    rev = version;
    sha256 = "sha256-WQib0zbwIROM9jyQ74x0jeFbHsdUar/OffeeedPDS+U=";
  };

  vendorHash = "sha256-JkQbQ2NEaumXbAfsv0fNiQf/EwMs3SDLHvu7c/bU7fU=" ;

  meta = with lib; {
    homepage = "https://github.com/nuvolaris/nuv";
    description = "Nuvolaris Almighty CLI";
    license = licenses.asl20;
    maintainers = with maintainers ; [ msciabarra ];
  };

}